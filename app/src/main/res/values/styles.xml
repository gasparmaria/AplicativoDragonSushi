<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/principal_color</item>
        <item name="colorPrimaryDark">@color/second_color</item>
        <item name="colorAccent">@color/gray</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="title1">
        <item name="android:layout_width">
            wrap_content
        </item>
        <item name="android:layout_height">
            wrap_content
        </item>
        <item name="android:fontFamily">
            @font/poppins
        </item>
        <item name="android:textSize">
            24sp
        </item>
        <item name="android:textColor">
            @color/color_hint
        </item>
        <item name="android:textStyle">
            bold
        </item>
        <item name="textAllCaps">
            true
        </item>
        <item name="android:layout_margin">
            20dp
        </item>
    </style>

    <style name="editText">
        <item name="android:layout_width">
            match_parent
        </item>
        <item name="android:layout_height">
            wrap_content
        </item>
        <item name="android:fontFamily">
            @font/poppins
        </item>
        <item name="android:textSize">
            12sp
        </item>
        <item name="android:padding">
            15dp
        </item>
        <item name="android:textColor">
            @color/black
        </item>
        <item name="android:textColorHint">
            @color/color_hint
        </item>
        <item name="android:background">
            @drawable/rounded_edittext
        </item>
        <item name="android:layout_marginBottom">
            20dp
        </item>
    </style>

    <style name="buttonCadastrar">
        <item name="backgroundTint">
            @color/second_color
        </item>
        <item name="android:background">
            @drawable/rounded_edittext
        </item>
        <item name="android:fontFamily">
            @font/poppins
        </item>
        <item name="android:textColor">
            @color/white
        </item>
        <item name="android:textStyle">
            bold
        </item>
        <item name="textAllCaps">
            true
        </item>
        <item name="android:textSize">
            14sp
        </item>
        <item name="android:layout_marginTop">
            230dp
        </item>
        <item name="android:layout_marginStart">
            230dp
        </item>
    </style>
</resources>